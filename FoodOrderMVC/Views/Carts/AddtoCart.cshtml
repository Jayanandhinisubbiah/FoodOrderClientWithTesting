@model CallingAPIInClient.Models.Food


@{
    ViewData["Title"] = "AddtoCart";
    Layout = "_LayoutUser";

        var PhotoPath = "~/Image/" + (Model.Image);

}

<h1>Add to Cart</h1>

<h4>Food</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddtoCart">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FoodId" />
           
            <div class="form-group">
                <label asp-for="FoodName" class="control-label"></label>
                <input asp-for="FoodName" class="form-control" />
                <span asp-validation-for="FoodName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="price" class="control-label"></label>
                <input asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
           <div class="form-group">
                 <img src="@PhotoPath" class="imageThumbnail" asp-append-version="true"/>
            </div>


             <div class="form-group">    
                 <label>Quanity</label>
           <input type="number" name="Qnt" value="1" min="1"   id="Qnt"/>
                   
                </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



